@model MVC.Areas.Gerencial.Models.Vendas.VendasViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="@Url.Content("~/Areas/Gerencial/Scripts/Vendas/Index.js")"></script>
@using (Html.BeginForm("Index", "Vendas", FormMethod.Post, new { @class = "form-horizontal", @id = "formVendas" }))
{
    <div class="row-fluid col-lg-12">
        <div class="page-header">
            <h3>
                Vendas
            </h3>
        </div>
    </div>
    <div class="row-fluid col-lg-6">
        <div class="control-group col-lg-10">
            <label for="GrupoId" class="control-label">Clientes</label>
            @Html.DropDownListFor(x => x.ClienteId, new SelectList(Model.ListaClientes, "Id", "Nome", Model.ClienteId), "", new { @class = "form-control" })
        </div>
        <div class="col-lg-12">
            <br />
        </div>
        <div class="control-group col-lg-3">
            <label class="control-label">Quantidade</label>
            @Html.TextBoxFor(x => x.Quantidade, new { @class = "form-control", @maxlength = 4, @placeholder = "0" })
        </div>
        <div class="col-lg-12">
            <br />
        </div>
        <div class="control-group col-lg-10">
            <label class="control-label">Produto</label>
            <div class="controls">
                @Html.TextBoxFor(x => x.CodigoProduto, new { @class = "form-control", @maxlength = 125, @placeholder = "código 000000000000000000000" })
            </div>
            @*<br />
                @Html.DropDownListFor(x => x.ProdutoId, new SelectList(Model.ListaProdutos, "Id", "Descricao", Model.ProdutoId), "", new { @class = "form-control", @id = "ProdutoId" })*@
        </div>
        <div class="col-lg-12">
            <br />
        </div>
        <div class="control-group col-lg-6">
            <button onclick="InserirItem(); return false;" class="btn btn-primary">Inserir</button>
            <button type="submit" class="btn btn-success" target="_blank">Concluír Venda</button>
        </div>
    </div>

    <div class="row-fluid col-lg-6">
        <div class="form-group">
            <label class="control-label" id="LabelSubTotal" style="font-size:70px">SubTotal:&ensp;0,00</label>
        </div>
        <div class="table-responsive">
            @*table-hover*@
            <table id="TableVendas" class="table table-striped table-bordered display dt-responsive nowrap" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Descrição</th>
                        <th>Qtd</th>
                        <th>Vlr Unt</th>
                        <th>Vlt Total</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    <tr></tr>
                </tbody>
            </table>
        </div>
    </div>
}