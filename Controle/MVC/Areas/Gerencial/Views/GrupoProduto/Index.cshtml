@model MVC.Areas.Gerencial.Models.Produtos.ProdutosViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="@Url.Content("~/Areas/Gerencial/Scripts/GrupoProduto/Index.js")"></script>

<div class="row-fluid col-lg-12">
    <div class="page-header">
        <h3>Grupos de Produtos</h3>
    </div>
    <div class="row-fluid">
        <a href="@Url.Action("Cadastrar","GrupoProduto")" class="btn btn-primary">Cadastrar</a>
    </div>
    <div class="col-lg-12"><br /></div>
</div>

<div class="control-group col-lg-4">
    <label class="control-label">Descrição</label>
    <div class="controls">
        @Html.TextBoxFor(x => x.Descricao, new { @class = "form-control", @maxlength = 60 })
    </div>
</div>

<div class="control-group col-lg-6">
    <div class="control-label">&nbsp;</div>
    <div class="controls">
        <a href="#" onclick="CarregarAbasFiltro(); return false;" class="btn btn-info">Filtrar&nbsp; <i class="glyphicon glyphicon-filter"></i></a>
        <a href="#" onclick="CarregarAbasFiltroReset(); return false;" class="btn btn-default">Limpar&nbsp; <i class="glyphicon glyphicon-refresh"></i></a>
    </div>
</div>

<div class="col-lg-12">
    <br />
</div>

<div class="row-fluid col-lg-12">
    <section id="AbasView">
        <div class="row-fluid" style="margin-top: 10px;">
            <ul id="myTabs" class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active" id="ativo"><a href="#" id="ativo-tab" role="tab" data-toggle="tab" aria-controls="ativo" aria-expanded="true">Ativos ()</a></li>
                <li role="presentation" class="" id="inativo"><a href="#" role="tab" id="inativo-tab" data-toggle="tab" aria-controls="inativo" aria-expanded="false">Inativos ()</a></li>
            </ul>
            <br />
        </div>
    </section>
    <section id="TableView">
        <div class="row-fluid">
            <table id="GridGrupoProdutos" class="display table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Descrição</th>
                        <th id="tdAcao" style="text-align: center">Ação</th>
                    </tr>
                </thead>
            </table>
        </div>
    </section>
</div>

