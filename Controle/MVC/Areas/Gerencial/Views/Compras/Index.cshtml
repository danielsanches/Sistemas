@model MVC.Areas.Gerencial.Models.Compras.ComprasViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="@Url.Content("~/Areas/Gerencial/Scripts/Compras/Index.js")"></script>

@using (Html.BeginForm("Index", "Compras", FormMethod.Post, new { id = "formularioCompras" }))
{
    <div class="row-fluid col-lg-12">
        <div class="page-header">
            <h3>Compras</h3>
        </div>
        <div class="row-fluid">
            <a href="@Url.Action("Cadastrar", "Compras")" class="btn btn-primary">Cadastrar</a>
        </div>
        <div class="col-lg-12"><br /></div>
    </div>

    <div class="control-group col-lg-2">
        <label class="control-label">Período</label>
        <div class="input-group date" id="datetimepickerInicio">
            @Html.TextBoxFor(x => x.DataInicio, new { @class = "form-control", @placeholder = "dd/mm/aaaa", @maxlength = 10 })
            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
        </div>
    </div>

    <div class="control-group col-lg-2">
        <label class="control-label">&emsp;</label>
        <div class="input-group date" id="datetimepickerFim">
            @Html.TextBoxFor(x => x.DataFim, new { @class = "form-control", @placeholder = "dd/mm/aaaa", @maxlength = 10 })
            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
        </div>
    </div>

    <div class="control-group col-lg-4">
        <label for="Fornecedor" class="control-label">Fornecedor</label>
        <div class="controls">
            @Html.DropDownListFor(x => x.FornecedorId, new SelectList(Model.ListaFornecedores, "Id", "NomeFantasia", Model.FornecedorId), "", new { @class = "form-control" })
        </div>
    </div>

    <div class="control-group col-lg-12">
        <div class="control-label">&nbsp;</div>
        <div class="controls">
            <a href="#" onclick="RecarregarComFiltro(); return false;" class="btn btn-info">Filtrar&nbsp; <i class="glyphicon glyphicon-filter"></i></a>
            <a href="#" onclick="FiltroReset(); return false;" class="btn btn-default">Limpar&nbsp; <i class="glyphicon glyphicon-refresh"></i></a>
        </div>
    </div>
    <div class="col-lg-12"><br /></div>
    <div class="row-fluid col-lg-12">
        <div class="row-fluid">
            <table id="GridCompras" class="display table table-striped table-bordered" width="100%">
                <thead>
                    <tr>
                        <th></th>
                        <th width="5%">Id</th>
                        <th>Data da Compra</th>
                        <th>Data do Lancamento</th>
                        <th>Fornecedor</th>
                        <th>Total da Compra</th>
                        <th width="5%" id="tdAcao">Ação</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
}