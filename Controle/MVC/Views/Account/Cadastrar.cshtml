@model MVC.Models.AccountViewModel
@{
    Layout = "~/Views/Shared/_Login.cshtml";
}
@using (Html.BeginForm("Cadastrar", "Account", new { @class = "form-horizontal" }))
{
    <div class="container-fluid">
        <div style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Novo Cadastro</div>
                </div>
                <div style="padding-top:30px" class="panel-body">
                    @Html.Partial("_MensagemPartial")
                    <div class="control-group">
                        <label class="control-label">Nome</label>
                        <div class="controls">
                            @Html.TextBoxFor(x => x.Nome, new { @class = "form-control", @placeholder = "informe o nome de usuário" })
                        </div>
                    </div>
                    <br />
                    <div class="control-group">
                        <label class="control-label">Nome Login</label>
                        <div class="controls">
                            @Html.TextBoxFor(x => x.NomeLogin, new { @class = "form-control", @placeholder = "informe o nome de login" })
                        </div>
                    </div>
                    <br />
                    <div class="control-group">
                        <label class="control-label">E-mail</label>
                        <div class="controls">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "exemplo@gmail.com" })
                        </div>
                    </div>
                    <br />
                    <div class="control-group">
                        <label class="control-label">Senha</label>
                        <div class="controls">
                            @Html.TextBoxFor(x => x.Senha, new { @class = "form-control", @type = "password" })
                        </div>
                    </div>
                    <br />
                    <div class="control-group">
                        <label class="control-label">Repita a Senha</label>
                        <div class="controls">
                            @Html.TextBoxFor(x => x.ConfirmaSenha, new { @class = "form-control", @type = "password" })
                        </div>
                    </div>
                    <br />
                    <div class="control-group">
                        <div class="controls">
                            <button type="submit" class="btn btn-info"><i class="icon-hand-right"></i> Cadastrar</button>
                            <a class="btn btn-primary" href="@Url.Action("Logar","Account")">Voltar à tela de Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
